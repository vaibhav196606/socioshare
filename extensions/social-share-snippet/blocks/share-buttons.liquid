{% comment %}
  SocioShare - Social Media Sharing Buttons
  Add this block to product pages to enable social sharing
{% endcomment %}

{% assign product_url = shop.url | append: product.url %}
{% assign product_title = product.title | url_encode %}
{% assign product_description = product.description | strip_html | truncate: 100 | url_encode %}
{% assign product_image = product.featured_image | image_url: width: 1200 %}

<div class="socioshare-container" style="
  display: flex;
  flex-wrap: wrap;
  gap: {{ block.settings.button_gap }}px;
  justify-content: {{ block.settings.alignment }};
  margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px 0;
">
  {% if block.settings.show_label %}
    <span class="socioshare-label" style="
      display: flex;
      align-items: center;
      font-size: {{ block.settings.font_size }}px;
      color: {{ block.settings.label_color }};
      margin-right: 8px;
    ">
      {{ block.settings.label_text }}
    </span>
  {% endif %}

  {% if block.settings.show_whatsapp %}
    <a 
      href="https://api.whatsapp.com/send?text={{ product_title }}%20{{ product_url }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-whatsapp"
      title="Share on WhatsApp"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#25D366{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_facebook %}
    <a 
      href="https://www.facebook.com/sharer/sharer.php?u={{ product_url }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-facebook"
      title="Share on Facebook"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#1877F2{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_twitter %}
    <a 
      href="https://twitter.com/intent/tweet?text={{ product_title }}&url={{ product_url }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-twitter"
      title="Share on Twitter/X"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#000000{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_pinterest %}
    <a 
      href="https://pinterest.com/pin/create/button/?url={{ product_url }}&media={{ product_image }}&description={{ product_title }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-pinterest"
      title="Pin on Pinterest"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#BD081C{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_linkedin %}
    <a 
      href="https://www.linkedin.com/sharing/share-offsite/?url={{ product_url }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-linkedin"
      title="Share on LinkedIn"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#0A66C2{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_email %}
    <a 
      href="mailto:?subject={{ product_title }}&body=Check%20out%20this%20product:%20{{ product_url }}"
      target="_blank"
      rel="noopener noreferrer"
      class="socioshare-button socioshare-email"
      title="Share via Email"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#EA4335{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        text-decoration: none;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"/>
      </svg>
    </a>
  {% endif %}

  {% if block.settings.show_copy %}
    <button 
      type="button"
      class="socioshare-button socioshare-copy"
      title="Copy Link"
      onclick="navigator.clipboard.writeText('{{ product_url }}').then(function() { alert('Link copied to clipboard!'); });"
      style="
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: {{ block.settings.button_size }}px;
        height: {{ block.settings.button_size }}px;
        border-radius: {{ block.settings.border_radius }}px;
        background-color: {% if block.settings.use_brand_colors %}#6B7280{% else %}{{ block.settings.button_bg_color }}{% endif %};
        color: {{ block.settings.icon_color }};
        border: none;
        cursor: pointer;
        transition: transform 0.2s ease, opacity 0.2s ease;
      "
    >
      <svg width="{{ block.settings.icon_size }}" height="{{ block.settings.icon_size }}" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
      </svg>
    </button>
  {% endif %}
</div>

<style>
  .socioshare-button:hover {
    transform: scale(1.1);
    opacity: 0.9;
  }
  
  .socioshare-button:focus {
    outline: 2px solid #000;
    outline-offset: 2px;
  }
</style>

{% schema %}
{
  "name": "SocioShare Buttons",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "Social Platforms"
    },
    {
      "type": "checkbox",
      "id": "show_whatsapp",
      "label": "Show WhatsApp",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_facebook",
      "label": "Show Facebook",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_twitter",
      "label": "Show Twitter/X",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pinterest",
      "label": "Show Pinterest",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_linkedin",
      "label": "Show LinkedIn",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show Email",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_copy",
      "label": "Show Copy Link",
      "default": false
    },
    {
      "type": "header",
      "content": "Button Appearance"
    },
    {
      "type": "range",
      "id": "button_size",
      "label": "Button Size",
      "min": 32,
      "max": 64,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "range",
      "id": "button_gap",
      "label": "Button Gap",
      "min": 4,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "use_brand_colors",
      "label": "Use Brand Colors",
      "default": true,
      "info": "Use official social media brand colors"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Custom Button Color",
      "default": "#333333",
      "info": "Only applies when brand colors are disabled"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Label"
    },
    {
      "type": "checkbox",
      "id": "show_label",
      "label": "Show Label",
      "default": true
    },
    {
      "type": "text",
      "id": "label_text",
      "label": "Label Text",
      "default": "Share:"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Label Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Label Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "flex-start"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 16
    }
  ]
}
{% endschema %}
